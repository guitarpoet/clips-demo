{
	"table_prefix":"demo_",
    "resolutions": [480, 640, 720, 1280, 1440, 1280, 2880],
	"namespace": "Demo\\",
    "template_dir": "application/templates",
	"route_rules": ["/application/rules/route.rules", "/rules/route.rules"],
	"filters": ["Rules", "Form", "Clips\\Widgets\\Jquery\\Init", "Js", "Scss", "Css", "SmartyView", "MustacheView", "JsonView", "DirectView"],
	"helpers":["web", "html"],
	"default_view": "Smarty",
	"debug_sass": true,
    "sass_plugins": ["Sass\\AutoConstruct", "Sass\\AutoResolution"],
	"models": {
		"clips_demo": {
			"datasource": "mysql"
		}
	},
	"logger": {
		"handlers": {
			"Stream" : ["php://stdin", "debug"],
			"FirePHP" : ["debug"],
			"ChromePHP": ["debug"],
			"RotatingFile": ["/tmp/clips_demo.log", 4, "debug"]
		},
		"processors": ["Git", "PsrLogMessage", "Introspection", "Tag"]
	},
	"datasources": {
		"mysql": {
			"table_prefix":"demo_",
			"context": "user",
			"type": "mysqli",
			"database": "demo_dev"
		}
	}
}
