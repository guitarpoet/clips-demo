{
	"table_prefix":"demo_",
	"namespace": "Demo\\",
	"route_rules": ["/application/rules/route.rules", "/rules/route.rules"],
	"filters": ["Rules", "Form", "Clips\\Widgets\\Jquery\\Init", "Js", "Scss", "Css", "SmartyView", "MustacheView", "JsonView", "DirectView"],
	"helpers":["web", "html"],
	"default_view": "Smarty",
	"rules_dir": "application/rules",
	"debug_sass": true,
	"image_dir": ["application/static/img"],
	"sass_folders": "application/static/scss",
	"sass_plugins": ["Sass\\AutoConstruct"],
	"cache_dir": "application/cache",
	"template_dir":["application/views"],
	"widget_dir": "application/Widgets",
	"test_data_dir": "tests/data",
	"models": {
		"clips_demo": {
			"datasource": "mysql"
		}
	},
	"logger": {
		"handlers": {
			"Stream" : ["php://stdin", "debug"],
			"FirePHP" : ["debug"],
			"ChromePHP": ["debug"],
			"RotatingFile": ["/tmp/clips_demo.log", 4, "debug"]
		},
		"processors": ["Git", "PsrLogMessage", "Introspection", "Tag"]
	},
	"datasources": {
		"mysql": {
			"table_prefix":"demo_",
			"context": "user",
			"type": "mysqli",
			"database": "demo_dev"
		}
	}
}
